     <div class="col-md-5 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h4>Editar Tarea</h4>
                    </div>
                    <div class="card-body">
                        <form action="/notas/edit-tarea/{{tarea._id}}?_method=PUT" method="POST">
                            <input type="hidden" name="_method" value="PUT"> <!--manera de mandar un methodo put-->
                            <div class="form-group">
                                <input type="text" name="nombre" value="{{tarea.nombre}}" class="form-control">
                            </div>
                            <div class="form-group">
                                    <textarea name="descripcion"  class="form-control">{{tarea.descripcion}}</textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                ADD
                            </button>
                        </form>
                    </div>
                </div>
            </div>